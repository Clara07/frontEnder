.ggwx-newsTab {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  flex-wrap: nowrap;
  flex-flow: row nowrap;
}

.ggwx-newsTab .ggwx-newsTabBlock {
  display: flex;
  align-self: center;
  padding: 5px 12px;
  font-size: 16px;
  color: #444;
}

.ggwx-newsTabSelected {
  color: #ff5252 !important;
  border-bottom: 2px solid #ff5252;
}

.ggwx-newsTab .ggwx-newsTabBlock .ggwx-newsTabText {
}

.ggwx-weather-container {
  width: 100%;
  height: 150px;
  margin-top: 8px;
  position: relative;
}

.ggwx-weather-container .bgImage {
  width: 100%;
  height: 100%;
}

.ggwx-weather-container .ggwx-weatherwrap {
  width: 100%;
  position: absolute;
  top: 0px;
  left: 0px;
  font-size: 16px;
}

.ggwx-weatherwrap .ggwx-weatherwrap-top {
  display: flex;
  align-items: flex-end;
}

.ggwx-changeCity {
  display: flex;
  margin-right: auto;
  margin-left: 5px;
  background-color: #86dafa52;
  border-radius: 8px;
  padding: 2px 5px;
}

.ggwx-changeCity image {
  width: 12px;
  height: 12px;
}

.ggwx-changeCity text {
  font-size: 10px;
  color: #f6f6f6;
  letter-spacing: 1px;
  margin-left: 3px;
}

.ggwx-futureWeather {
  margin-right: 8px;
}

.ggwx-futureWeather text {
  font-size: 10px;
  letter-spacing: 1px;
  color: #f0f0f0;
}

.ggwx-weatherwrap-content {
  color: #fff;
  text-align: center;
}

.ggwx-info {
}

.ggwx-city{
  position:absolute;
top:18%;
left:2%;
font-size:16px;
letter-spacing:2px;
}
.ggwx-city:first-child{
  margin-bottom: 10px;
}

.ggwx-temp {
  position: relative;
}

.ggwx-weather {
}

.ggwx-weather-detail {
  font-size:14px;
  margin-bottom:5px;
  letter-spacing:2px;
}

.ggwx-weather-detailBtn {
  font-size: 10px;
  background-color: #f3bdc7bf;
  width: 30px;
  border-radius: 8px;
  padding: 2px;
  position: absolute;
  top: 2%;
  right: 34%;
  letter-spacing: 1px;
}
